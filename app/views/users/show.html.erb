<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
				<br>
				<%= @user.email %>
				<br>
				<% if current_user?(@user) %>
					<% if @user.offer.present? %>
						<%= link_to "Edit Offer", edit_offer_path %>
					<% else %>
						<%= link_to "Create Offer", new_offer_path %>
					<% end %>
				<% end %>
      </h1>
    </section>
  </aside>
	<div class="col-md-8">
		<% if @user.offer.present? %>
			<h3>Carpool Offer:</h3>
			<ol class="offers">
				<%= render @offer %>
			</ol>
		<% end %>
	</div>
</div>
